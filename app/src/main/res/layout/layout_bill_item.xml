<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_light_gray_bg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/account_fragment_layout_marginLeft2"
        android:paddingRight="@dimen/account_fragment_layout_marginLeft2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bill_item_layout_parkName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_tiny_small"
                android:gravity="center_vertical"
                android:textSize="@dimen/base_text_size_small_medium"
                android:textColor="@color/color_black"
                android:text="百联西郊购物广场" />

            <TextView
                android:id="@+id/bill_item_layout_total_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_tiny_small"
                android:textSize="@dimen/base_text_size_small"
                android:textColor="@color/color_menu_text_gray_bg"
                android:text="总费用:21元" />

            <TextView
                android:id="@+id/bill_item_layout_pay_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_small"
                android:textSize="@dimen/base_text_size_small"
                android:textColor="@color/color_menu_text_gray_bg"
                android:text="支付时间:2016-08-06 14:25:34" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_gray_back" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_divider_size_small"
        android:background="@color/color_light_gray_bg" />
</LinearLayout>