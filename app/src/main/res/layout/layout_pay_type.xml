<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/pay_type_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_medium"
        android:src="@drawable/icon_pay_alipay" />

    <TextView
        android:id="@+id/pay_type_tv"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/pay_fragment_padding"
        android:layout_weight="1"
        android:text="@string/pay_fragment_aliPay"
        android:textColor="@color/color_black"
        android:textSize="@dimen/base_text_size_small_medium" />

    <TextView
        android:id="@+id/pay_type_balance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/pay_fragment_padding"
        android:layout_marginRight="@dimen/pay_fragment_layout_margin_large"
        android:textColor="@color/color_gray_bg"
        android:textSize="@dimen/base_text_size_small"
        android:visibility="gone" />

</LinearLayout>