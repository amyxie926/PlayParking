<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_title_height"
        layout="@layout/layout_header_login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_fragment_layout_margin"
        android:layout_marginRight="@dimen/login_fragment_layout_margin"
        android:layout_marginTop="@dimen/login_fragment_layout_marginTop"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_small" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_login_phone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/login_fragment_phone"
                style="@style/base_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_small"
                android:background="@drawable/icon_et_gray_bg"
                android:hint="@string/login_fragment_phone_hint"
                android:inputType="phone"
                android:maxLength="11" />

            <ImageView
                android:id="@+id/login_fragment_phone_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="@dimen/login_fragment_layout_margin_smaller"
                android:layout_marginRight="@dimen/login_fragment_layout_margin_small"
                android:src="@drawable/icon_clear"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_fragment_layout_margin"
        android:layout_marginRight="@dimen/login_fragment_layout_margin"
        android:layout_marginTop="@dimen/login_fragment_layout_margin_small"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_small" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_login_pwd" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/login_fragment_pass"
                style="@style/base_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_small"
                android:background="@drawable/icon_et_gray_bg"
                android:hint="@string/login_fragment_pwd_hint"
                android:inputType="textPassword"
                android:maxLength="12" />

            <ImageView
                android:id="@+id/login_fragment_pass_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="@dimen/login_fragment_layout_margin_smaller"
                android:layout_marginRight="@dimen/login_fragment_layout_margin_small"
                android:src="@drawable/icon_clear"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_fragment_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginRight="@dimen/padding_large"
        android:layout_marginTop="@dimen/login_fragment_layout_marginTop"
        android:background="@drawable/green_bg_button"
        android:gravity="center"
        android:padding="@dimen/padding_tiny_small"
        android:text="@string/login_fragment_login_btn"
        android:textColor="@color/color_white"
        android:textSize="@dimen/base_text_size_medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginRight="@dimen/padding_large"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/login_fragment_forget_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_medium"
            android:paddingLeft="@dimen/padding_small"
            android:paddingTop="@dimen/padding_medium"
            android:text="@string/login_fragment_forget_pwd"
            android:textColor="@color/color_black"
            android:textSize="@dimen/base_text_size_small_medium" />
    </LinearLayout>

</LinearLayout>