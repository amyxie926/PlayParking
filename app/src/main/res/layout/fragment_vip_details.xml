<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_gray_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_title_height"
            layout="@layout/layout_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/vip_fragment_layout_margin"
            android:layout_marginRight="@dimen/vip_fragment_layout_margin"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/vip_details_fragment_vip_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/vip_fragment_layout_margin"
                android:layout_marginRight="@dimen/vip_fragment_layout_margin"
                android:layout_marginTop="@dimen/vip_fragment_layout_margin_large"
                android:background="@drawable/icon_vip_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/vip_fragment_layout_margin_large"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/vip_details_fragment_marketname_tv"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="百联西郊购物中心"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/base_text_size_small_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="月卡"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/base_text_size_small" />

                    <TextView
                        android:id="@+id/vip_details_fragment_vip_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500元"
                        android:textColor="@color/color_white"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#38000000"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/vip_fragment_padding_large"
                    android:paddingRight="@dimen/vip_fragment_padding_large" >

                    <TextView
                        android:id="@+id/vip_details_fragment_car_number_tv"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/base_divider_size"
                        android:text="沪8888888"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/base_text_size_small"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/vip_details_fragment_vip_valid_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/base_divider_size"
                        android:text="有效期:一个月"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/base_text_size_small" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/color_gray_bg" />

            <!-- 会员卡说明 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="15dip"
                android:text="@string/vip_details_fragment_info"
                android:textColor="@color/color_black"
                android:textSize="@dimen/base_text_size_small_medium" />

            <TextView
                android:id="@+id/vip_details_fragment_info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dip"
                android:layout_marginTop="10dip"
                android:text="dafdalfjalfdjajfla;jfd"
                android:textColor="@color/color_gray_bg"
                android:textSize="@dimen/base_text_size_small" />

            <!-- 会员使用须知 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="15dip"
                android:text="@string/vip_details_fragment_use_info"
                android:textColor="@color/color_black"
                android:textSize="@dimen/base_text_size_small_medium" />

            <TextView
                android:id="@+id/vip_details_fragment_use_info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dip"
                android:layout_marginTop="10dip"
                android:text="dafdalfjalfdjajfla;jfd"
                android:textColor="@color/color_gray_bg"
                android:textSize="@dimen/base_text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vip_details_fragment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_marginTop="@dimen/register_fragment_layout_margin_large"
            android:background="@drawable/green_bg_button"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/vip_details_fragment_buy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:text="@string/vip_details_fragment_buy"
                android:textColor="@color/color_white"
                android:textSize="@dimen/base_text_size_medium" />

            <TextView
                android:id="@+id/vip_details_fragment_residual_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/base_text_size_small" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>