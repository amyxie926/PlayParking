<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_medium"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/layout_integera_exchange_name"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/base_text_size_small_medium"
                android:textColor="@color/color_black"
                android:text="每日登录" />

            <TextView
                android:id="@+id/layout_integera_exchange_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/base_text_size_small"
                android:textColor="@color/color_menu_text_gray_bg"
                android:text="2016-08-06 12:32" />
        </LinearLayout>

        <TextView
            android:id="@+id/layout_integera_exchange_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_tiny_small"
            android:textSize="@dimen/base_text_size_small"
            android:textColor="@color/color_menu_text_gray_bg"
            android:text="恭喜您获得每日登录奖励:积分+2" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_divider_size_small"
        android:background="@color/color_light_gray_bg" />
</LinearLayout>