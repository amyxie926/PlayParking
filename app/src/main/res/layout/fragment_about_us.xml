<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:toggle="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_light_gray_bg"
              android:orientation="vertical">

    <include
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_title_height"
            layout="@layout/layout_header"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dip"
                    android:layout_marginBottom="25dip"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:drawableTop="@drawable/icon_about_us"
                          android:drawablePadding="10dip"
                          android:text="@string/app_name"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textColor="@color/color_black"
                          android:textSize="@dimen/base_text_size_small"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/app_version"
                          android:textColor="@color/color_home_gray"
                          android:textSize="@dimen/base_text_size_tiny_small"/>

            </LinearLayout>

            <!-- 产品介绍 -->

            <LinearLayout
                    android:id="@+id/about_us_fragment_products_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_tiny_small"
                    android:background="@color/color_white"
                    android:gravity="center_vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_medium"
                        android:text="@string/about_us_fragment_products"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/base_text_size_small_medium"/>

                <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_medium"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/base_text_size_small_medium"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dip"
                        android:paddingBottom="15dip"
                        android:paddingTop="15dip"
                        android:src="@drawable/icon_gray_back"/>
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_divider_size"
                    android:background="@color/color_light_gray_bg"/>

            <!-- 服务条款 -->

            <LinearLayout
                    android:id="@+id/about_us_fragment_service_terms_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:gravity="center_vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_medium"
                        android:text="@string/about_us_fragment_service_terms"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/base_text_size_small_medium"/>

                <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_medium"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/base_text_size_small_medium"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dip"
                        android:paddingBottom="15dip"
                        android:paddingTop="15dip"
                        android:src="@drawable/icon_gray_back"/>
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_divider_size"
                    android:background="@color/color_light_gray_bg"/>

            <!-- 使用说明 -->

            <LinearLayout
                    android:id="@+id/about_us_fragment_use_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:gravity="center_vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_medium"
                        android:text="@string/about_us_fragment_use_info"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/base_text_size_small_medium"/>

                <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_medium"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/base_text_size_small_medium"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dip"
                        android:paddingBottom="15dip"
                        android:paddingTop="15dip"
                        android:src="@drawable/icon_gray_back"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_divider_size"
                    android:background="@color/color_light_gray_bg"/>
            <!-- 用户反馈 -->

            <LinearLayout
                    android:id="@+id/about_us_fragment_user_feedback_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:gravity="center_vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_medium"
                        android:text="@string/about_us_fragment_user_feedback"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/base_text_size_small_medium"/>

                <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_medium"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/base_text_size_small_medium"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dip"
                        android:paddingBottom="15dip"
                        android:paddingTop="15dip"
                        android:src="@drawable/icon_gray_back"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>