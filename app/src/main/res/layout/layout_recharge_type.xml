<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/rechgarge_moeny_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_medium"
        android:text="@string/recharge_fragment_recharge_500"
        android:textColor="@color/color_black"
        android:textSize="@dimen/base_text_size_small_medium" />

    <TextView
        android:id="@+id/rechgarge_give_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_medium"
        android:text="@string/recharge_fragment_recharge_give_700"
        android:textColor="@color/color_gray_bg"
        android:textSize="@dimen/base_text_size_small" />

</LinearLayout>