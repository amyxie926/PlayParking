<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_gray_bg">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_title_height"
        layout="@layout/layout_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_medium"
        android:layout_marginLeft="@dimen/padding_medium"
        android:layout_marginRight="@dimen/padding_medium"
        android:background="@color/color_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="XXX购物广场"
            android:padding="@dimen/padding_small"
            android:textColor="@color/color_black"
            android:textSize="@dimen/wallet_bill_text_size" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_divider_size"
                android:background="@color/color_light_gray_bg"
                android:layout_marginLeft="@dimen/padding_large"
                android:layout_marginRight="@dimen/padding_large"
                android:layout_marginBottom="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_small" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_tiny"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_detail_fragment_car_no"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="沪A0000000"
                    android:paddingLeft="@dimen/padding_small"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_menu_text_gray_bg" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_tiny"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_detail_fragment_in_time"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-01-24 13:20"
                    android:paddingLeft="@dimen/padding_small"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_menu_text_gray_bg" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_tiny"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_detail_fragment_out_time"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-01-24 18:20"
                    android:paddingLeft="@dimen/padding_small"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_menu_text_gray_bg" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_tiny"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_detail_fragment_use_time"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5小时"
                    android:paddingLeft="@dimen/padding_small"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_menu_text_gray_bg" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_tiny"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_detail_fragment_cost"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14元"
                    android:paddingLeft="@dimen/padding_small"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_menu_text_gray_bg" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_tiny"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_detail_fragment_subsidy"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首次支付减免3元"
                    android:paddingLeft="@dimen/padding_small"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_menu_text_gray_bg" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_tiny"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_detail_fragment_coupon"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="礼金券2元"
                    android:paddingLeft="@dimen/padding_small"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_menu_text_gray_bg" />
            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_divider_size"
                android:background="@color/color_light_gray_bg"
                android:layout_marginLeft="@dimen/padding_large"
                android:layout_marginRight="@dimen/padding_large"
                android:layout_marginBottom="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_small" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_tiny"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_detail_fragment_final_cost"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9元"
                    android:paddingLeft="@dimen/padding_small"
                    android:textSize="@dimen/wallet_bill_text_size"
                    android:textColor="@color/color_bill_orange" />
            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_divider_size"
                android:background="@color/color_light_gray_bg"
                android:layout_marginLeft="@dimen/padding_large"
                android:layout_marginRight="@dimen/padding_large"
                android:layout_marginBottom="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_small" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_tiny"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_detail_fragment_pay_time"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-01-24 18:20"
                    android:paddingLeft="@dimen/padding_small"
                    android:textSize="@dimen/base_text_size_medium"
                    android:textColor="@color/color_menu_text_gray_bg" />
            </TableRow>
        </TableLayout>


    </LinearLayout>

</LinearLayout>