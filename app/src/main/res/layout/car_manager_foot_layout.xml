<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/color_white"
     >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_gravity="center_horizontal"
  
        android:orientation="vertical" >
          <TextView
            android:id="@+id/tv_confirm_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/truck_text"
            android:textSize="@dimen/base_text_size_small_medium"
            android:layout_marginTop="20dip"
            android:text="只能绑定一个车牌，点击删除车牌" />

        <Button
            android:id="@+id/ImageView_addcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/vip_fragment_layout_margin"
            android:background="@drawable/addcar"
            android:gravity="center"
            android:padding="@dimen/vip_fragment_padding"
            android:text="@string/vip_pay_fragment_add_binding_car"
            android:textColor="@color/truck_text"
            android:textSize="@dimen/base_text_size_medium" />
    </LinearLayout>

</LinearLayout>