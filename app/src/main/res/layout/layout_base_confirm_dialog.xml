<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/padding_large"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/color_white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_confirm_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_confirm_dialog_layout_margin"
            android:layout_marginLeft="@dimen/base_confirm_dialog_layout_margin"
            android:layout_marginRight="@dimen/base_confirm_dialog_layout_margin"
            android:layout_marginTop="@dimen/base_confirm_dialog_layout_margin"
            android:gravity="center"
            android:textColor="@color/color_gray_bg"
            android:textSize="@dimen/base_text_size_small_medium" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_divider_size"
        android:background="@color/color_gray_bg" />

    <!-- confirm button section -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_confirm_dialog_layout_top"
        android:layout_marginTop="@dimen/base_confirm_dialog_layout_top"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_confirm_ok"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_weight="1"
            android:background="@drawable/green_bg_button"
            android:gravity="center"
            android:padding="@dimen/padding_tiny_small"
            android:text="@string/base_ok"
            android:textColor="@color/color_white"
            android:textSize="@dimen/base_text_size_small_medium" />

        <TextView
            android:id="@+id/tv_confirm_cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_weight="1"
            android:background="@drawable/gray_shape_bg"
            android:gravity="center"
            android:padding="@dimen/padding_tiny_small"
            android:text="@string/base_cancel"
            android:textColor="@color/color_white"
            android:textSize="@dimen/base_text_size_small_medium" />
    </LinearLayout>

</LinearLayout>